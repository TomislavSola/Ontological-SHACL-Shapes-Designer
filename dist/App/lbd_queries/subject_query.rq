 SELECT DISTINCT ?class
WHERE {
    { ?p rdfs:domain ?class }
    UNION
    { ?p schema:domainIncludes ?class }
    UNION
    { ?p rdfs:domain ?superclass .
      ?class rdfs:subClassOf+ ?superclass .
    }
    UNION
    { ?p schema:domainIncludes ?superclass .
      ?class rdfs:subClassOf+ ?superclass .
    }
 }